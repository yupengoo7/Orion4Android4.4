<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 返回按钮 -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/detail_spacing"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/detail_padding"
        android:layout_below="@id/btn_back">

        <!-- 左侧海报 -->
        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="@dimen/detail_poster_width"
            android:layout_height="@dimen/detail_poster_height"
            android:layout_marginEnd="@dimen/detail_poster_margin_end"
            android:scaleType="centerCrop"
            android:background="@color/background_card" />

        <!-- 右侧信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 标题 -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_title_size"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/detail_spacing" />

            <!-- 基本信息 -->
            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_info_size"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/detail_spacing" />

            <!-- 导演 -->
            <TextView
                android:id="@+id/tv_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_info_size"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/spacing_small" />

            <!-- 演员 -->
            <TextView
                android:id="@+id/tv_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_info_size"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/detail_spacing" />

            <!-- 简介 -->
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_desc_size"
                android:textColor="@color/text_primary"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/detail_spacing" />

            <!-- 操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/detail_spacing">

                <Button
                    android:id="@+id/btn_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_play"
                    android:background="@drawable/button_background"
                    android:textColor="@color/text_primary"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:layout_marginEnd="@dimen/spacing_medium" />

                <Button
                    android:id="@+id/btn_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_favorite"
                    android:background="@drawable/button_background"
                    android:textColor="@color/text_primary"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp" />

            </LinearLayout>

            <!-- 选集标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_episodes"
                android:textSize="@dimen/detail_info_size"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_small" />

            <!-- 选集列表 -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_episodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>